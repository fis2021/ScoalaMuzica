    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" text="delete an instructor" GridPane.columnIndex="1" GridPane.columnSpan="2" />

    <Label text="Username:" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <TextField fx:id="usernameField" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Text fx:id="deleteMessage" GridPane.columnIndex="2" GridPane.rowIndex="7" />
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="5">
        <Button onAction="#handleDeleteButton" text="remove" />
        <Button onAction="#BackToAdminInterfaceFromDeletion" text="back" />
