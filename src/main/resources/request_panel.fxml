<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="400" prefWidth="600" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RequestInstructorController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" text="Make a request for an instructor" GridPane.columnIndex="1" GridPane.columnSpan="2" />

    <Label text="Instructor name:" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <TextField fx:id="usernameField" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Label text="Entry hour" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <TextField fx:id="entryHour" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Label text="Exit hour" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <TextField fx:id="exitHour" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Text fx:id="requestMessage" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="5">
        <Button onAction="#requestInstructor" text="request" />
        <Button onAction="#Back" text="back" />
    </HBox>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
